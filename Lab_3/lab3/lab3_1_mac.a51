MAC:
// MAC OPERATION, CALL THE ADDITION SUBROUTINE USING "CALL ADD16"
	MOV A, 70H
	MOV B, 73H
	MUL AB
	MOV R0, A
	MOV R1, B
	
	MOV A, 71H
	MOV B, 74H
	MUL AB
	MOV R2, A
	MOV R3, B

	CALL ADD16

	MOV A, 72H
	MOV B, 75H
	MUL AB
	MOV R2, A
	MOV R3, B

	CALL ADD16
	
	MOV 52H, R0
	MOV 51H, R1
	MOV 50H, R7

