ADD16:
	CLR C
	MOV A, R0 //LSB OF x
	MOV B, R2 //LSB OF y 
	
	ADD A, B  // ADDITION OF LSB bits
	
	MOV R0, A // ABHI LSB R STORED IN R0 AGAIN 
	
	MOV A, R1   // LOADING MSB 
	MOV B, R3 // LOADING MSB
	
	ADDC A, B
	MOV R1, A
	JC CARRY
	RET
	CARRY:
		INC R7
RET

